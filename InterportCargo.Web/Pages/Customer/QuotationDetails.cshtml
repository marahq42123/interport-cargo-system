@page "{id:int}"
@model InterportCargo.Web.Pages.Customer.QuotationDetailsModel
@using InterportCargo.Web.Models

<h2>Quotation Details</h2>

@if (Model.Quotation != null)
{
    <p><b>From:</b> @Model.Quotation.Source</p>
    <p><b>To:</b> @Model.Quotation.Destination</p>
    <p><b>Status:</b> @Model.Quotation.Status</p>

    @if (Model.Quotation.Status == QuotationStatus.Pending)
    {
        <form method="post">
            <button name="action" value="Accept" class="btn btn-success">Accept</button>
            <button name="action" value="Reject" class="btn btn-danger">Reject</button>
        </form>
    }
}
