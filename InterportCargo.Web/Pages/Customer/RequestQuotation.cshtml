@page
@model InterportCargo.Web.Pages.Customer.RequestQuotationModel
@{
    ViewData["Title"] = "Request Quotation";
}

<h2>Request Quotation</h2>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success">@Model.Message</div>
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">Source</label>
        <input asp-for="Quotation.Source" class="form-control" />
        <span class="text-danger" asp-validation-for="Quotation.Source"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Destination</label>
        <input asp-for="Quotation.Destination" class="form-control" />
        <span class="text-danger" asp-validation-for="Quotation.Destination"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Container Type</label>
        <select asp-for="Quotation.ContainerType" class="form-select">
            <option>20GP</option>
            <option>40GP</option>
            <option>LCL</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Number of Containers</label>
        <input asp-for="Quotation.NumberOfContainers" class="form-control" type="number" min="1" />
        <span class="text-danger" asp-validation-for="Quotation.NumberOfContainers"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Package Nature</label>
        <input asp-for="Quotation.PackageNature" class="form-control" placeholder="e.g., General / Fragile / Food etc." />
        <span class="text-danger" asp-validation-for="Quotation.PackageNature"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Job Nature</label>
        <input asp-for="Quotation.JobNature" class="form-control" placeholder="Import / Export / Packing / Unpacking / Quarantine" />
        <span class="text-danger" asp-validation-for="Quotation.JobNature"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Notes (optional)</label>
        <textarea asp-for="Quotation.Notes" class="form-control"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Submit</button>
    <a class="btn btn-outline-secondary ms-2" href="/Customer/Dashboard">Cancel</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
