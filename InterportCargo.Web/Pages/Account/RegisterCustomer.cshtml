@page
@model InterportCargo.Web.Pages.Account.RegisterCustomerModel
@{
    ViewData["Title"] = "Register Customer";
}
<h2>Register Customer</h2>
<form method="post">
  <div><label>First Name</label><input asp-for="FirstName" /></div>
  <div><label>Family Name</label><input asp-for="FamilyName" /></div>
  <div><label>Email</label><input asp-for="Email" type="email" /></div>
  <div><label>Phone</label><input asp-for="Phone" /></div>
  <div><label>Company Name</label><input asp-for="CompanyName" /></div>
  <div><label>Address</label><input asp-for="Address" /></div>
  <div><label>Password</label><input asp-for="Password" type="password" /></div>
  <button type="submit">Register</button>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
