@page
@model InterportCargo.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form method="post">
  <div><label>Email</label><input asp-for="Email" type="email" /></div>
  <div><label>Password</label><input asp-for="Password" type="password" /></div>
  <button type="submit">Login</button>
</form>
<div asp-validation-summary="All" class="text-danger"></div>
